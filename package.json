{
  "name": "stylelint-csstree-validator",
  "version": "1.2.1",
  "description": "Stylelint plugin to validate CSS syntax",
  "homepage": "https://github.com/csstree/validator",
  "author": "Roman Dvornov <rdvornov@gmail.com>",
  "license": "MIT",
  "repository": "csstree/stylelint-validator",
  "bugs": {
    "url": "https://github.com/csstree/stylelint-validator/issues"
  },
  "main": "index.js",
  "keywords": [
    "stylelint-plugin",
    "stylelint",
    "csstree",
    "css",
    "validator",
    "syntax"
  ],
  "scripts": {
    "test": "tape test | tap-spec",
    "travis": "npm run test"
  },
  "dependencies": {
    "css-tree": "1.0.0-alpha.28"
  },
  "peerDependencies": {
    "stylelint": ">=7.0.0 <10.0.0"
  },
  "devDependencies": {
    "postcss-less": "^0.15.0",
    "postcss-scss": "^0.4.1",
    "stylelint": "^8.1.1",
    "stylelint-rule-tester": "^0.6.2",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "no-duplicate-case": 2,
      "no-undef": 2,
      "no-unused-vars": [
        2,
        {
          "vars": "all",
          "args": "after-used"
        }
      ]
    }
  }
}
