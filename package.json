{
  "name": "stylelint-csstree-validator",
  "version": "1.9.0",
  "description": "Stylelint plugin to validate CSS syntax",
  "repository": "csstree/stylelint-validator",
  "author": "Roman Dvornov <rdvornov@gmail.com>",
  "license": "MIT",
  "main": "index.js",
  "keywords": [
    "stylelint-plugin",
    "stylelint",
    "csstree",
    "css",
    "validator",
    "syntax"
  ],
  "scripts": {
    "test": "mocha --reporter ${REPORTER:-progress}",
    "travis": "npm run test"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "css-tree": "^1.1.2"
  },
  "peerDependencies": {
    "stylelint": ">=7.0.0 <15.0.0"
  },
  "devDependencies": {
    "mocha": "^9.1.3",
    "postcss-less": "^5.0.0",
    "postcss-scss": "^4.0.2",
    "stylelint": "^14.1.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "no-duplicate-case": 2,
      "no-undef": 2,
      "no-unused-vars": [
        2,
        {
          "vars": "all",
          "args": "after-used"
        }
      ]
    }
  },
  "files": [
    "syntax-extension",
    "index.js"
  ]
}
